<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">
    
    <class name="domain.Admin" table="admin">
        <id column="username" name="username">
            <generator class="assigned"/>
        </id>
        <property column="password" name="password"/>
        <property column="theme" name="theme"/>
        <property column="ulogovan" name="ulogovan" type="boolean"/>
        <property column="lastLogin" name="lastLogin" type="java.util.Date"/>
    </class>
</hibernate-mapping>
