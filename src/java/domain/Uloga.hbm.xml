<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">
    
    <class name="domain.Uloga" table="uloga">
       
        <composite-id > 
            <key-many-to-one name="pilot" class="domain.Pilot" column="jmbg" foreign-key="jmbg"/> 
            <key-many-to-one name="avion" class="domain.Avion" column="avionID" foreign-key="avionID"/> 
        </composite-id>
        
        <property column="nazivUloge" name="nazivUloge"/>
        <property column="datum" name="datum" type="java.util.Date" />
    
    </class>
</hibernate-mapping>
